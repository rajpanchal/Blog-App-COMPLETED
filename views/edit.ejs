<% include partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">
        New Blog
    </div>
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" placeholder="Title" name="blogs[title]" value="<%= blog.title %>">
        </div>
        <div class="field">
            <label>Image</label>
             <input type="text" placeholder="Image_Url" name="blogs[image]" value="<%= blog.image %>">
        </div>
        <div class="field">
            <label>Blog content</label>
             <textarea name="blogs[body]"> <%= blog.body %> </textarea>
        </div>
        
        <input class="ui violet basic button big" type="submit">
    </form>
</div>

<% include partials/footer %>